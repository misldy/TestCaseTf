{
    "python.pythonPath": "python3.7",
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "jupyter.jupyterServerType": "local",
    "remote.SSH.showLoginTerminal": true,
    "explorer.confirmDelete": false,
    "workbench.editor.enablePreview": false,
    "python.defaultInterpreterPath": "/usr/local/bin/python3.7",
    "editor.fontWeight": "500",
    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "git.autofetch": true,
    "remote.SSH.remotePlatform": {
        "121.5.251.165": "linux",
        "轻量服务器": "linux"
    },
    "vscode-cnb.workspace": "/root/www/blogs",
    /* 设置pylint代码检查工具 */
    // 默认对Python文件进行静态检查
    "python.linting.enabled": false,
    // 默认在Python文件保存时进行静态检查
    "python.linting.lintOnSave": true,
    // 默认使用pylint对Python文件进行静态检查
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=248"
    ],
    // pylint选项，以逗号分隔的字符串元素
    "python.linting.pylintArgs": [
        "--disable=W0402,R0201,C0304,",
        "--extension-pkg-whitelist=numpy"
    ],
    "workbench.colorCustomizations": {
        "editorWarning.foreground": "#ff0",
        "editorInfo.foreground": "#00f",
        "editorError.foreground": "#ff5100",
    },
    /* 代码格式化 */
    "python.formatting.provider": "yapf",
    // yapf选项，以逗号分隔的字符串元素
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: chromium, indent_width: 4}"
    ],
    "python.analysis.completeFunctionParens": true,
    "pylance.insidersChannel": "daily",
    "[python]": {
        
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.diagnostics.sourceMapsEnabled": true,
    "python.analysis.diagnosticMode": "workspace",
    "emmet.showSuggestionsAsSnippets": true,
    
    // django相关配置
    "files.associations": {
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "emmet.includeLanguages": {
        "django-html": "html"
    },

    // 主题优化相关配置
    "editor.fontSize": 16,
    "explorer.confirmDragAndDrop": false,
    "workbench.colorTheme": "Son of Obsidian",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "material-icon-theme",
    "editor.gotoLocation.multipleDefinitions": "gotoAndPeek",
    "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",
    "python.languageServer": "Pylance",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "git.enableSmartCommit": true,
}